{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1 class="is-size-3">{{ 'title.post_list'|trans }}</h1>

    <table class="table is-striped is-fullwidth">
        <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.publishedAt|date("n/d/y \\a\\t g:ia") }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_post_new') }}" class="button is-small">
                            <span class="icon">
                              <i class="fa fa-eye" aria-hidden="true"></i>
                            </span>
                            <span>{{ 'action.show'|trans }}</span>
                        </a>

                        <a href="{{ path('admin_post_edit', {'id': post.id}) }}" class="button is-small is-primary">
                            <span class="icon">
                              <i class="fa fa-edit" aria-hidden="true"></i>
                            </span>
                            <span>{{ 'action.edit'|trans }}</span>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

