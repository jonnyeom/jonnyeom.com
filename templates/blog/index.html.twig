{% extends 'base.html.twig' %}

{% block body %}
    <section class="section pt-0">
        <div class="container is-max-desktop">
            <div class="content">
                {% for id, post in posts %}
                    {% if post.isPublished() %}
                        <div>
                            <div class="is-uppercase has-text-weight-bold {% if not loop.first %}mt-6{% endif %}">{{ post.getDate }}</div>
                            <h2 class="mt-1 mb-4"><a href="{{ path('app_posts') }}/{{ id }}">{{ post.getTitle }}</a></h2>
                            {% if post.getDescription is defined %}
                                <p class="">{{ post.getDescription }}</p>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
