<body>
<!-- Google Tag Manager (noscript) -->
<noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KMMG43J"
            height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->

<nav class="px-5 pb-6 menu">
    <div class="container is-max-desktop">
        <div class="tabs has-text-weight-medium">
            <ul>
                <li{% if app.request.get('_route') == 'app_homepage' %} class="is-active"{% endif %}>
                    <a href="{{ path('app_homepage') }}">Home</a></li>
                <li{% if app.request.get('_route') == 'app_projects' %} class="is-active"{% endif %}>
                    <a href="{{ path('app_projects') }}">Projects</a></li>
                <li{% if app.request.get('_route') == 'app_posts' or app.request.get('_route') == 'app_post' %} class="is-active"{% endif %}>
                    <a href="{{ path('app_posts') }}">Writing</a></li>
                <li{% if app.request.get('_route') == 'app_about' %} class="is-active"{% endif %}>
                    <a href="{{ path('app_about') }}">About</a></li>
                <li{% if app.request.get('_route') == 'app_experiments' or app.request.get('_route') starts with 'strava_' %} class="is-active"{% endif %}>
                    <a href="{{ path('app_experiments') }}">Experiments</a></li>
            </ul>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<footer class="footer">
    <div class="container is-max-desktop">
        <div class="mb-1">
            <a class="mr-3" href="https://www.linkedin.com/in/jonnyeom/" target="_blank" rel="noopener">
                <span class="icon"><i class="fab fa-lg fa-linkedin"></i></span>
            </a>
            <a class="mr-3" href="https://github.com/jonnyeom" target="_blank" rel="noopener">
                <span class="icon"><i class="fab fa-lg fa-github"></i></span>
            </a>
            <a class="mr-3" href="https://connect.symfony.com/profile/jonnyeom" target="_blank" rel="noopener">
                <span class="icon"><i class="fab fa-lg fa-symfony"></i></span>
            </a>
            <a class="mr-3" href="https://twitter.com/jonnyeom" target="_blank" rel="noopener">
                <span class="icon"><i class="fab fa-lg fa-x-twitter"></i></span>
            </a>
            <a href="https://www.drupal.org/u/jonnyeom" target="_blank" rel="noopener">
                <span class="icon"><i class="fab fa-lg fa-drupal"></i></span>
            </a>
        </div>
        <p>Copyright © 2024 Jonathan Eom · <strong>jonnyeom</strong> by
            <a href="https://github.com/jonnyeom">jonnyeom</a></p>
    </div>
</footer>

</body>
</html>
