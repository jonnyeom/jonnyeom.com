    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ leogout_seo() }}

    {% block stylesheets %}
        <link rel="icon"
              href="https://images.emojiterra.com/google/noto-emoji/unicode-15/color/svg/1f341.svg">
        {{ encore_entry_link_tags('app') }}
        <script src="https://kit.fontawesome.com/2d80e56da0.js" crossorigin="anonymous"></script>
